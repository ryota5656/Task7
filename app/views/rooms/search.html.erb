<header>
<%= render "shared/partial" %>
</header>

<div class="container-fiuld room">
  <div>
    <h4 class="pb-4">検索結果：<%= @rooms_count%>件</h4>
  </div>
  
  <div class="row">
    <% @rooms.each do |room| %>
    <div class="col-sm-6 col-lg-4 col-xl-3">
      <%= link_to room_reservations_path(room) , class: "link_room" do  %>
      <div class="room-frame-inner">
        
        <div class="room-image-out">
      
      <% if room.image.attached? %>
        <%= image_tag room.image,class: "room_image"%>
      <% end %>
        </div>
      <div class="room_profile">
      
        <p class="room_profile_name"><%= room.name %></p>
        <p class="room_profile_address"><%= room.address %></p>
        <p class="room_profile_price">¥<%= room.price %></p>
      
      </div>
      
      </div>
      <% end %>
    </div>
    
    <% end %>
  </div>
</div>