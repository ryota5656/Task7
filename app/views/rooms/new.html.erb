
<%= form_with model: @room , local:true do |f| %>
<%= render "shared/error", obj: @room %>
<%= f.text_field :user_id, value: current_user.id %>
  <table>
    <tr>
      <th><%= f.label :name ,"ルーム名" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :introduction ,"ルーム紹介" %></th>
      <td><%= f.text_field:introduction  %></td>
    </tr>
    
    <tr>
      <th><%= f.label :price ,"価格" %></th>
      <td><%= f.text_field:price %></td>
    </tr>
    
    <tr>
      <th><%= f.label :address ,"住所" %></th>
      <td><%= f.text_field:address %></td>
    </tr>
    
  </table>
  <%= f.file_field :image %>
    <ul>
      <li><%= f.submit "登録"%></li>
      <li><%= link_to "スケジュール一覧に戻る", rooms_path %></li>
    </ul>      
<% end %>