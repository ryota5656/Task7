<%= form_with model: @reservation , local:true do |f| %>
<%= f.text_field :user_id, value: current_user.id %>
<%= f.text_field :room_id, value: @room %>
  <table>
    <tr>
      <th><%= f.label :start_data ,"開始" %></th>
      <td><%= f.date_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :end_data ,"終了" %></th>
      <td><%= f.date_field:end_data  %></td>
    </tr>
    
    <tr>
      <th><%= f.label :people ,"人数" %></th>
      <td><%= f.text_field:people %></td>
    </tr>
    
  </table>
    <ul>
      <li><%= f.submit "登録"%></li>
      <li><%= link_to "スケジュール一覧に戻る", rooms_path %></li>
    </ul>      
<% end %>